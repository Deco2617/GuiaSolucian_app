<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/white_smoke"
    tools:context=".InformeIncidenteFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Informe de Incidente (Auto-Generado)"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Detalles del Incidente"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textViewTipoIncidente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Tipo: Falla del Servicio Principal" />

                <TextView
                    android:id="@+id/textViewFechaIncidente"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Fecha: 2024-07-26 10:30 AM" />

                <TextView
                    android:id="@+id/textViewLiderRespuesta"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Líder de Respuesta: Ana Sánchez" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Métricas de Desempeño"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/lavender"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tiempo Real de Recuperación (RTO)" />

                        <TextView
                            android:id="@+id/textViewRtoValue"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="18 min 22 seg"
                            android:textAppearance="@style/TextAppearance.MaterialComponents.Headline5"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/textViewRtoStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="(Objetivo: &lt; 15 min - No Cumplido)"
                            android:textColor="@color/crimson" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Bitácora de Acciones"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    app:cardElevation="0dp"
                    app:strokeColor="@color/light_grey"
                    app:strokeWidth="1dp">

                    <TableLayout
                        android:id="@+id/tableLayoutBitacora"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:stretchColumns="2">

                        <TableRow>
                            <TextView android:text="Hora" android:textStyle="bold" android:paddingEnd="16dp"/>
                            <TextView android:text="Rol" android:textStyle="bold" android:paddingEnd="16dp"/>
                            <TextView android:text="Descripción" android:textStyle="bold"/>
                        </TableRow>

                        <TableRow android:layout_marginTop="8dp">
                            <TextView android:text="10:30"/>
                            <TextView android:text="[Monitor]"/>
                            <TextView android:text="Alerta de servicio principal caído."/>
                        </TableRow>

                        <TableRow android:layout_marginTop="8dp">
                            <TextView android:text="10:32"/>
                            <TextView android:text="[Líder]"/>
                            <TextView android:text="Equipo de respuesta notificado."/>
                        </TableRow>

                    </TableLayout>

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:text="Lecciones Aprendidas (A completar)"
                    android:textAppearance="@style/TextAppearance.MaterialComponents.Subtitle1"
                    android:textStyle="bold" />

                <com.google.android.material.textfield.TextInputLayout
                    style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:hint="Anotar aquí las lecciones aprendidas...">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/editTextLecciones"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:gravity="top|start"
                        android:inputType="textMultiLine" />
                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/buttonExportar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:paddingVertical="14dp"
                    android:text="Exportar y Archivar en SharePoint"
                    android:textAllCaps="false"
                    app:backgroundTint="@color/mediumPurple"
                    app:cornerRadius="16dp"
                    app:icon="@drawable/ic_upload"
                    app:iconGravity="textStart" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>